{
	"name": "@pure/svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"exports": {
		"./backend-queries": {
			"types": "./dist/lib/backendQueries/index.d.ts",
			"default": "./dist/lib/backendQueries/index.js"
		},
		"./utils": {
			"types": "./dist/lib/utils/index.d.ts",
			"default": "./dist/lib/utils/index.js"
		},
		"./domain": {
			"types": "./dist/lib/domain/index.d.ts",
			"default": "./dist/lib/domain/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .ts,.svelte",
		"lint:fix": "eslint . --ext .ts,.svelte --fix",
		"build:lib": "tsc --project ./tsconfig.lib.json && tsc-alias -p ./tsconfig.lib.json --resolve-full-paths",
		"watch:lib": "concurrently \"tsc --project ./tsconfig.lib.json --watch\" \"tsc-alias -p ./tsconfig.lib.json --resolve-full-paths --watch\"",
		"// --- TOOL SCRIPTS ---": "",
		"tools:build": "tsc -p tools/tsconfig.json && tsc-alias -p tools/tsconfig.json --resolve-full-paths",
		"tools:alias": "tsc-alias -p tools/tsconfig.json --resolve-full-paths",
		"tools:watch": "concurrently \"tsc -p tools/tsconfig.json --watch\" \"nodemon --watch tools/dist --delay 500ms -e js --exec npm run tools:alias\"",
		"scaffold:page": "npm run tools:build && node tools/dist/tools/scaffold-page.js",
		"parse-ddl": "npm run tools:build && node tools/dist/tools/parse-ddl.js",
		"/// --- IMAGES ---": "",
		"img:gen": "cls && node tools/dist/tools/images/genImages.js",
		"img:buildAndGen": "cls && npm run tools:build && node tools/dist/tools/images/generateMissingImages.js",
		"img:genProd": "npm run img:gen -- --no-dry-run",
		"// --- ANALYSIS TOOL SCRIPTS ---": "",
		"an:build-run:ws-price": "npm run tools:build && node tools/dist/tools/analysis/analyze-wholesaler-main.js",
		"an:ws-price": "node tools/dist/tools/analysis/analyze-wholesaler-main.js",
		"an:createCSV": "node tools/dist/tools/analysis/db.js",
		"an:build-createCSV": "npm run tools:build && run an:createCSV",
		"an:report": "npm run an:createCSV && npm run an:ws-price",
		"// --- TESTS ---": "",
		"test": "vitest",
		"test:run": "vitest run"
	},
	"devDependencies": {
		"@fal-ai/serverless-client": "^0.14.3",
		"@sveltejs/acorn-typescript": "^1.0.7",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/eslint-config": "^8.3.4",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/lodash-es": "^4.17.12",
		"@types/mime-types": "^3.0.1",
		"@types/mssql": "^9.1.7",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^9.2.1",
		"eslint": "^9.33.0",
		"eslint-plugin-svelte": "^3.11.0",
		"nodemon": "^3.1.0",
		"pino-pretty": "^13.1.1",
		"prettier": "^3.6.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.7.0",
		"typescript": "^5.9.2",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"bits-ui": "^2.11.4",
		"devalue": "^5.1.1",
		"dotenv": "^16.4.5",
		"lodash-es": "^4.17.21",
		"mime-types": "^3.0.1",
		"mssql": "^11.0.1",
		"pino": "^9.9.0",
		"prettier-plugin-svelte": "^3.4.0",
		"sharp": "^0.34.4",
		"uuid": "^11.1.0",
		"zod": "^4.1.5"
	}
}
