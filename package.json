	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . --ext .ts,.svelte",
		"lint:fix": "eslint . --ext .ts,.svelte --fix",
		"// --- TOOL SCRIPTS ---": "",
		"tools:build": "tsc -p tools/tsconfig.json",
		"tools:watch": "tsc -p tools/tsconfig.json --watch",
		"scaffold:page": "npm run tools:build && node tools/dist/scaffold-page.js",
		"parse-ddl": "npm run tools:build && node tools/dist/parse-ddl.js",
		"// --- TESTS ---": "",
		"test": "vitest",
		"test:run": "vitest run"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/eslint-config": "^8.3.4",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/lodash-es": "^4.17.12",
		"@types/mssql": "^9.1.7",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.33.0",
		"eslint-plugin-svelte": "^3.11.0",
		"pino-pretty": "^13.1.1",
		"prettier": "^3.6.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"bits-ui": "^2.11.4",
		"devalue": "^5.1.1",
